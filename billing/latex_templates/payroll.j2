% ---------------- HEADER ----------------
\newcommand{\tutorSummaryHeader}{
    \noindent
    \begin{minipage}[t]{0.58\textwidth}
        \vspace{0pt}
        \raggedright
        \textbf{Payroll: PAY-{{ "%04d"|format(payroll_number) }}}\\
        \textbf{Date: {{ payroll_date }}}\\
        \vspace{1em}
        \textbf{Biweek:} {{ biweek }}
    \end{minipage}
    \hfill
    \begin{minipage}[t]{0.38\textwidth}
        \vspace{0pt}
        \raggedleft
        \includegraphics[width=0.9cm]{latex_templates/propeller.png}\\[0.5em]
        \textbf{\textcolor{propel_blue}{Propel Tutoring}}\\
        \textit{Edmonton, AB}
    \end{minipage}
    \vspace{3em}
}

% ---------------- FOOTER ----------------
\newcommand{\tutorSummaryFooter}{
    \vspace{2em}
    \begin{flushleft}
        {% if notes %}
        \textbf{Notes:}\\
        {{ notes }}
        {% endif %}
    \end{flushleft}
}

% ---------------- DOCUMENT ----------------
\begin{document}
\pagestyle{empty}

\tutorSummaryHeader

% ---------------- TUTORS TABLE ----------------
\noindent
