    {% for tutor in tutors %}
    {{ tutor.tutor_id }} & {{ tutor.pref_name }} & {{ tutor.num_sessions }} & {{ tutor.num_hours|round(2) }} & {{ tutor.num_students }} & {{ tutor.total_earned|round(2) }} \\
    {% endfor %}
    \bottomrule
\end{tabularx}

